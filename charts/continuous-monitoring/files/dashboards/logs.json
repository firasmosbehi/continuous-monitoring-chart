{
  "uid": "cluster-logs",
  "title": "Cluster Logs",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "logs",
      "title": "Logs",
      "datasource": "Loki",
      "targets": [
        {
          "expr": "{namespace=~\"$namespace\", pod=~\"$pod\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showLabels": false,
        "showTime": true,
        "wrapLogMessage": true
      },
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 16 }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "datasource": "Loki",
        "query": "label_values(namespace)",
        "refresh": 1,
        "multi": true,
        "includeAll": true,
        "allValue": ".*"
      },
      {
        "name": "pod",
        "type": "query",
        "datasource": "Loki",
        "query": "label_values({namespace=~\"$namespace\"}, pod)",
        "refresh": 1,
        "multi": true,
        "includeAll": true,
        "allValue": ".*"
      }
    ]
  }
}

{
  "uid": "logs-overview",
  "title": "Logs Overview",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Log Volume (lines/sec)",
      "datasource": "Loki",
      "targets": [
        {
          "expr": "sum by (namespace) (rate({namespace=~\"$namespace\", pod=~\"$pod\"}[1m]))",
          "legendFormat": "{{namespace}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ops" },
        "overrides": []
      },
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Error Rate (lines/sec)",
      "datasource": "Loki",
      "targets": [
        {
          "expr": "sum by (namespace) (rate({namespace=~\"$namespace\", pod=~\"$pod\"} |~ \"(?i)(error|exception|fatal)\" [1m]))",
          "legendFormat": "{{namespace}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ops" },
        "overrides": []
      },
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "datasource": "Loki",
        "query": "label_values(namespace)",
        "refresh": 1,
        "multi": true,
        "includeAll": true,
        "allValue": ".*"
      },
      {
        "name": "pod",
        "type": "query",
        "datasource": "Loki",
        "query": "label_values({namespace=~\"$namespace\"}, pod)",
        "refresh": 1,
        "multi": true,
        "includeAll": true,
        "allValue": ".*"
      }
    ]
  }
}
